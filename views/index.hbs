<div class="container section">

  <div class="main section">
    <h1> {{ title }} </h1>
    <hr>
    <div class="todo-list">
    </div>
  </div>

  <div class="sidebar section">
    <h1> {{ header }} </h1>
    <hr>
    <input type="text" class="new form-control" placeholder="Add to-do item" name="todo" maxlength="40">
    <button type="button" class="add btn btn-default btn-xs">Enter</button>
  </div>

</div>

<script src="main.js"></script>

{{!-- to-do list template --}}
<template id="todo-template">
  <ul>
  \{{# each todos}}
    <li><form action="/delete/\{{ _id }}" method="post"><button class="x-btn">x</button></form>
    <span class="todos update" contenteditable="true" oid="\{{ _id }}">\{{ message }}</span>
    </li>
  \{{/each}}
  </ul>
</template>
